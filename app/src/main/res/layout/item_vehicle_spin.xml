<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_vehicle_selector">

    <ImageView
        android:id="@+id/iv_spin_icon"
        android:src="@mipmap/vehicle"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_spin_name"
        android:text="ffffffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BA141313"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginStart="2dp"/>
    <TextView
        android:id="@+id/tv_spin_sim"
        android:text="11111111"
        android:textSize="12sp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"/>

</LinearLayout>
